<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="San.WorkerApplicants"
             BackgroundColor="White">

    <Grid ColumnDefinitions="2*,4*">

        <!-- Left Panel: Job Requests Form -->
        <VerticalStackLayout Grid.Column="0" Padding="20">
            <Label Text="Job Requests Form" FontSize="16" FontAttributes="Bold"/>
            <Label Text="You Created" FontSize="12" TextColor="#666666" Margin="0,0,0,20"/>

            <!-- List of Jobs with Radio Buttons -->
            <VerticalStackLayout Spacing="10">
                <RadioButton GroupName="Jobs" IsChecked="True">
                    <RadioButton.Content>
                        <HorizontalStackLayout>
                            <Label Text="Carpentry Job" VerticalOptions="Center"/>
                            <Label Text=" (0/1)" TextColor="#777777" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton GroupName="Jobs">
                    <RadioButton.Content>
                        <HorizontalStackLayout>
                            <Label Text="Cleaning Job" VerticalOptions="Center"/>
                            <Label Text=" (0/2)" TextColor="#777777" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton GroupName="Jobs">
                    <RadioButton.Content>
                        <HorizontalStackLayout>
                            <Label Text="Interior Design Job" VerticalOptions="Center"/>
                            <Label Text=" (0/1)" TextColor="#777777" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </RadioButton.Content>
                </RadioButton>
            </VerticalStackLayout>

            <!-- Add Button -->
            <Button Text="+" FontSize="24" WidthRequest="40" HeightRequest="40" 
                    BackgroundColor="Transparent" TextColor="Black" 
                    BorderWidth="0" HorizontalOptions="Start" Margin="0,20,0,0"/>
        </VerticalStackLayout>

        <!-- Right Panel: Applicants Table -->
        <Grid Grid.Column="1" Padding="20" RowDefinitions="Auto,*">

            <!-- Header -->
            <HorizontalStackLayout Grid.Row="0" Margin="0,0,0,20">
                <Label Text="Applicants for &quot;Carpentry Job&quot; (0/1)" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                <Button Text="←" FontSize="18" BackgroundColor="Transparent" 
                        BorderWidth="0" Margin="10,0,0,0" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Applicants Table -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*">

                <!-- Table Headers -->
                <Grid Grid.Row="0" ColumnDefinitions="1.5*,2*,*,*,Auto" Margin="0,0,0,10">
                    <Label Grid.Column="0" Text="Skillset" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Text="Applicants Name" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Text="Rate" FontAttributes="Bold"/>
                    <Label Grid.Column="3" Text="Hiring Status" FontAttributes="Bold"/>
                </Grid>

                <!-- Applicants List - Using static list for demo -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Spacing="10">
                        <!-- Applicant 1 -->
                        <Grid ColumnDefinitions="1.5*,2*,*,*,Auto" Padding="0,10">
                            <Label Grid.Column="0" Text="Cement Specialist" TextColor="#666666" VerticalOptions="Center"/>
                            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                <Frame WidthRequest="30" HeightRequest="30" CornerRadius="15" 
                                       BackgroundColor="#444444" Padding="0" HasShadow="False">
                                    <Label Text="J" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="John Michael Satintigan" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Grid.Column="2" Text="₱152.00 per hour" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Button Grid.Column="3" Text="Approve" BackgroundColor="Transparent" 
                                    TextColor="Black" VerticalOptions="Center"/>
                            <Button Grid.Column="4" Text="⟩" FontSize="16" FontAttributes="Bold"
                                    BackgroundColor="Transparent" VerticalOptions="Center"/>
                        </Grid>

                        <!-- Applicant 2 -->
                        <Grid ColumnDefinitions="1.5*,2*,*,*,Auto" Padding="0,10">
                            <Label Grid.Column="0" Text="Landscape Artist" TextColor="#666666" VerticalOptions="Center"/>
                            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                <Frame WidthRequest="30" HeightRequest="30" CornerRadius="15" 
                                       BackgroundColor="#444444" Padding="0" HasShadow="False">
                                    <Label Text="L" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="Luke Daniel Bacus" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Grid.Column="2" Text="₱132.00 per hour" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Button Grid.Column="3" Text="Approve" BackgroundColor="Transparent" 
                                    TextColor="Black" VerticalOptions="Center"/>
                            <Button Grid.Column="4" Text="⟩" FontSize="16" FontAttributes="Bold"
                                    BackgroundColor="Transparent" VerticalOptions="Center"/>
                        </Grid>

                        <!-- Applicant 3 -->
                        <Grid ColumnDefinitions="1.5*,2*,*,*,Auto" Padding="0,10">
                            <Label Grid.Column="0" Text="General Carpentry" TextColor="#666666" VerticalOptions="Center"/>
                            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                <Frame WidthRequest="30" HeightRequest="30" CornerRadius="15" 
                                       BackgroundColor="#444444" Padding="0" HasShadow="False">
                                    <Label Text="M" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="Mark Lee Chou" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label Grid.Column="2" Text="₱132.00 per hour" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Button Grid.Column="3" Text="Approve" BackgroundColor="Transparent" 
                                    TextColor="Black" VerticalOptions="Center"/>
                            <Button Grid.Column="4" Text="⟩" FontSize="16" FontAttributes="Bold"
                                    BackgroundColor="Transparent" VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>