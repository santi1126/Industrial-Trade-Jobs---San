<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="San.LoginPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="25" HorizontalOptions="Center" VerticalOptions="Center" MaximumWidthRequest="400">

            <!-- Header -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Industrial Trade Jobs" FontSize="35" TextColor="Blue" FontAttributes="Bold"  HorizontalOptions="Center"/>
                <Label Text="A place for workers." FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Developed by SAN Incorporation" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout>
                <Label Text="Email" FontAttributes="Bold" FontSize="Small"/>
                <Frame BorderColor="Black" CornerRadius="5" Padding="5" HasShadow="False" BackgroundColor="Transparent">
                    <Entry x:Name="emailEntry" Placeholder="Enter your email" Keyboard="Email" TextColor="Black" BackgroundColor="Transparent"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout>
                <Label Text="Password" FontAttributes="Bold" FontSize="Small"/>
                <Frame BorderColor="Black" CornerRadius="5" Padding="5" HasShadow="False" BackgroundColor="Transparent">
                    <Entry x:Name="passwordEntry" Placeholder="Enter your password" IsPassword="True" TextColor="Black" BackgroundColor="Transparent"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Login Button -->
            <Button Text="Log in"
                    Clicked="OnLoginClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>

            <!-- Signup Prompt -->
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Text="New here? Create an Account" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Button Text="Sign Up"
                        Clicked="NavigateToSignup"
                        BackgroundColor="Blue"
                        TextColor="White"
                        HorizontalOptions="Fill"
                        CornerRadius="10"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
