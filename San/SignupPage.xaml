<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="San.SignupPage">

    <VerticalStackLayout Padding="10" Spacing="5" BackgroundColor="White">
        <StackLayout HorizontalOptions="Center" 
                     VerticalOptions="Start" 
                     Margin="0,0,0,10"
                     BackgroundColor="White">

            <Label Text="Industrial Trade Jobs" 
                   TextColor="Blue" 
                   FontSize="50" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            <Label Text="A place for workers." 
                   TextColor="Black" 
                   FontSize="25" 
                   HorizontalOptions="Center" />
            <Label Text="Developed by SAN Incorporation" 
                   TextColor="Gray" 
                   FontSize="12.5" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <Grid ColumnDefinitions="*,*" 
              Padding="10" 
              RowSpacing="15">
            <VerticalStackLayout 
                Grid.Column="0" 
                Spacing="12">

                <!-- Title -->
                <VerticalStackLayout>
                    <Label Text="Create your account!" 
                           FontSize="Medium" 
                           FontAttributes="Bold" 
                           Padding="215,2,0,5"/>
                    <Label Text="Enter your required information" 
                           FontSize="Small" 
                           Padding="215,2,0,5"/>
                </VerticalStackLayout>

                <!-- Email -->
                <VerticalStackLayout>
                    <Label Text="Email"  
                           FontSize="Small" 
                           FontAttributes="Bold"
                           Padding="215,2,0,5"
                           TextColor="Black"/>
                    <Frame BorderColor="Black"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False"
                           HeightRequest="50"
                           WidthRequest="310"
                           BackgroundColor="Transparent">
                        <Entry x:Name="emailEntry" 
                               Keyboard="Email" 
                               Placeholder="asdf@hotmail.com"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               />
                    </Frame>
                </VerticalStackLayout>

                <!-- First Name -->
                <VerticalStackLayout>
                    <Label Text="First Name" 
                           FontSize="Small" 
                           TextColor="Black"
                           FontAttributes="Bold"  
                           Padding="215,2,0,5"/>
                    <Frame BorderColor="Black"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False"
                           HeightRequest="50"
                           WidthRequest="310"
                           BackgroundColor="Transparent">
                        <Entry x:Name="firstNameEntry" 
                               Placeholder="Enter first name"
                               TextColor="Black"
                               BackgroundColor="Transparent"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Last Name -->
                <VerticalStackLayout>
                    <Label Text="Last Name" 
                           FontSize="Small" 
                           TextColor="Black"
                           FontAttributes="Bold" 
                           Padding="215,2,0,5" />
                    <Frame BorderColor="Black"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False"
                           HeightRequest="50"
                           WidthRequest="310"
                           BackgroundColor="Transparent">
                        <Entry x:Name="lastNameEntry" 
                               Placeholder="Enter last name"
                               TextColor="Black"
                               BackgroundColor="Transparent"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Password -->
                <VerticalStackLayout>
                    <Label Text="Password" 
                           FontSize="Small" 
                           TextColor="Black"
                           FontAttributes="Bold"  
                           Padding="215,2,0,5" />
                    <Frame BorderColor="Black"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False"
                           HeightRequest="50"
                           WidthRequest="310"
                           BackgroundColor="Transparent">
                        <Entry x:Name="passwordEntry" 
                               IsPassword="True"
                               Placeholder="Enter password"
                               TextColor="Black"
                               BackgroundColor="Transparent"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Confirm Password -->
                <VerticalStackLayout>
                    <Label Text="Confirm Password" 
                           FontSize="Small" 
                           TextColor="Black"
                           FontAttributes="Bold"  
                           Padding="215,2,0,5"/>
                    <Frame BorderColor="Black"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False"
                           HeightRequest="50"
                           WidthRequest="310"
                           BackgroundColor="Transparent">
                        <Entry x:Name="confirmPasswordEntry" 
                               IsPassword="True"
                               Placeholder="Confirm password"
                               TextColor="Black"
                               BackgroundColor="Transparent"/>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Right Panel -->
            <VerticalStackLayout Grid.Column="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Spacing="15">
                <Image Source="workerprofile.png" 
                       HeightRequest="100" 
                       WidthRequest="100" 
                       HorizontalOptions="Center" 
                       Aspect="AspectFill" />

                <Button Text="Sign Up" 
                        Clicked="OnSignupClicked"
                        BackgroundColor="Blue" 
                        TextColor="White" 
                        HeightRequest="45" 
                        WidthRequest="250" 
                        CornerRadius="10" />

                <Label Text="By clicking continue, you agree to our Terms of Service " 
                       FontSize="Small" 
                       FontAttributes="Italic" 
                       HorizontalTextAlignment="Center" />
                <Label Text="and Privacy Policy" 
                       FontSize="Small" 
                       FontAttributes="Italic" 
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Alert -->
        <Frame x:Name="AlertFrame" 
               IsVisible="False" 
               BackgroundColor="White" 
               Padding="20" 
               CornerRadius="10" 
               HorizontalOptions="Center" 
               VerticalOptions="Center">
            <StackLayout Spacing="10">
                <Label x:Name="AlertMessageLabel" 
                       TextColor="Black" 
                       FontSize="Medium" 
                       HorizontalOptions="Center"/>
                <Button Text="OK" 
                        Clicked="OnAlertOkClicked" 
                        BackgroundColor="Blue" 
                        TextColor="White" 
                        HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
