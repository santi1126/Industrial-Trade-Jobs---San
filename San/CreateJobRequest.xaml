<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="San.CreateJobRequest"
             BackgroundColor="White">

    <ScrollView Padding="10">
        <Grid ColumnDefinitions="1.5*,4*" Padding="10">

            <!-- Left Panel -->
            <VerticalStackLayout Grid.Column="0" BackgroundColor="#F7F8FA" Padding="15">
                <Label Text="Job Requests Form You Created" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>

                <StackLayout Padding="10">
                    <RadioButton Content="Carpentry Job (0/1)" GroupName="Jobs" TextColor="Black"/>
                    <RadioButton Content="Cleaning Job (0/2)" GroupName="Jobs" TextColor="Black"/>
                    <RadioButton Content="Interior Design Job (0/1)" GroupName="Jobs" TextColor="Black"/>
                </StackLayout>

                <Button Text="+" FontSize="Large" 
                        BackgroundColor="White" 
                        BorderColor="Black" 
                        BorderWidth="1" 
                        WidthRequest="40"
                        HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Right Panel -->
            <VerticalStackLayout Grid.Column="1" BackgroundColor="#EEF6FC" Padding="20" Spacing="15">

                <!-- Header Section -->
                <HorizontalStackLayout Spacing="20">
                    <Frame CornerRadius="37.5" Padding="0" HasShadow="False"
                           WidthRequest="75" HeightRequest="75" BackgroundColor="Transparent">
                        <Image Source="workerprofile.png" WidthRequest="75" HeightRequest="75" Aspect="AspectFill"/>
                    </Frame>

                    <VerticalStackLayout>
                        <Label Text="Job Request Name (0/1)" FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="Request made by Helena Dela Cruz" FontSize="Small" TextColor="Gray"/>
                    </VerticalStackLayout>

                    <Button Text="In-Complete" BackgroundColor="#3446eb" TextColor="White"/>
                </HorizontalStackLayout>

                <!-- Add some space after the profile picture -->
                <BoxView HeightRequest="20" />

                <!-- Job Details Form -->
                <VerticalStackLayout Spacing="15">

                    <!-- Currency -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Currency:" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                        <Frame BorderColor="Black"  Padding="0">
                            <Picker x:Name="CurrencyPicker" TextColor="Black" BackgroundColor="CornflowerBlue" WidthRequest="200" HeightRequest="40" SelectedIndex="0">
                                <Picker.Items>
                                    <x:String>Select Currency</x:String>
                                    <x:String>USD ($)</x:String>
                                    <x:String>PHP (₱)</x:String>
                                    <x:String>EUR (€)</x:String>
                                    <x:String>Others</x:String>
                                </Picker.Items>
                            </Picker>
                        </Frame>
                    </HorizontalStackLayout>
                  

                    <!-- Rate -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Rate:" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                        <Frame BorderColor="Black"  Padding="0">
                            <Entry x:Name="RateEntry" Placeholder="Enter Rate"  TextColor="Black" Keyboard="Numeric" BackgroundColor="White" WidthRequest="200" HeightRequest="40"/>
                        </Frame>
                    </HorizontalStackLayout>

                    <!-- Time Period -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Time Period:" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                        <Frame BorderColor="Black"  Padding="0">
                            <Picker x:Name="TimePeriodPicker"  TextColor="Black" WidthRequest="200" BackgroundColor="CornflowerBlue" HeightRequest="40" SelectedIndex="0">
                                <Picker.Items>
                                    <x:String>Select Time Period</x:String>
                                    <x:String>Per Hour</x:String>
                                    <x:String>Per Day</x:String>
                                    <x:String>Per Project</x:String>
                                    <x:String>Others</x:String>
                                </Picker.Items>
                            </Picker>
                        </Frame>
                    </HorizontalStackLayout>
                  

                </VerticalStackLayout>

                <!-- Skillset -->
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Skillset Required:" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                    <Frame BorderColor="Black" Padding="0">
                        <Picker x:Name="SkillsetPicker"  TextColor="Black" WidthRequest="200" BackgroundColor="CornflowerBlue" HeightRequest="40" SelectedIndex="0">
                            <Picker.Items>
                                <x:String>Select Skillset</x:String>
                                <x:String>Carpentry</x:String>
                                <x:String>Plumbing</x:String>
                                <x:String>Electrical</x:String>
                                <x:String>Cleaning</x:String>
                                <x:String>Painting</x:String>
                                <x:String>Others</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Location -->
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Location:" FontAttributes="Bold"  VerticalOptions="Center" TextColor="Black" />
                    <Frame BorderColor="Black"  Padding="0">
                        <Entry x:Name="LocationEntry" WidthRequest="500" HeightRequest="40" Placeholder="Enter Location" BackgroundColor="White" TextColor="Black"/>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Job Description -->
                <Label Text="Job Description:" FontAttributes="Bold" TextColor="Black"/>
                <Frame BorderColor="Black"  Padding="0">
                    <Editor x:Name="JobDescriptionEntry" Placeholder="Enter Job Description" BackgroundColor="White" HeightRequest="100" TextColor="Black"/>
                </Frame>

                <!-- Action Buttons -->
                <HorizontalStackLayout Spacing="10">
                    <Button Text="Publish" BackgroundColor="Green" TextColor="White" Clicked="OnPublishClicked" />
                    <Button Text="Cancel" BackgroundColor="DarkRed" TextColor="White" Clicked="OnPublishClicked"/>
                </HorizontalStackLayout>

                <!-- Edit and Attach Buttons -->
                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                    <Image Source="editicon.png" WidthRequest="25" HeightRequest="25"/>
                    <Image Source="attachicon.png" WidthRequest="25" HeightRequest="25"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
